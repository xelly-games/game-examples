{
  "include": ["src/**/*"],
  "compilerOptions": {
    "outDir": "./dist",
    // esnext is the latest js, so we minimize transpilation, and the output is
    // what rollup will then consume:
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  }
}
